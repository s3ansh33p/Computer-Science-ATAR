<html lang="en" id="gamewin">

    <%- include('./components/header.ejs'); %>
    
	<body>
		<div id="loader">
			<p class="loading-text">Connecting to server...</p>
			<div class="loading-bar">
				<div class="loading-inner-bar"></div>
			</div>
			<p class="loading-item">Loading...</p>
		</div>
